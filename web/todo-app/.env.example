# Todo App Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# BFF Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# Internal Service Configuration
# =============================================================================
# Service Ports (used by services themselves and for URL construction)
AI_API_PORT=8000
PROFILE_SERVICE_PORT=8081

# Service Hosts (for URL construction)
AI_API_HOST=localhost
PROFILE_SERVICE_HOST=localhost

# =============================================================================
# Development Configuration
# =============================================================================
# Frontend dev server port (Vite)
FRONTEND_DEV_PORT=5173

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Service Health Check Configuration
# =============================================================================
HEALTH_CHECK_TIMEOUT=5000
SERVICE_DISCOVERY_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_DETAILS=true

# =============================================================================
# Legacy Frontend Environment Variables (deprecated)
# These are kept for backward compatibility but should not be used
# The BFF now handles all API communication
# =============================================================================
# VITE_AI_API_URL=http://localhost:8000
# VITE_PROFILE_API_URL=http://localhost:8081
# VITE_DEV_MODE=true
# VITE_LOG_LEVEL=debug
