# One Monorepo Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://one_user:one_password@localhost:5432/one_dev
DATABASE_TEST_URL=postgresql://one_test_user:test_password@localhost:5432/one_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO/S3 Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=one-storage

# Email Configuration (Mailhog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@one.local

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=8000
CHAT_PORT=5173

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring Configuration
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Development Configuration
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=false
