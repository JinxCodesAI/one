{
  "name": "@one/testing-infrastructure",
  "version": "1.0.0",
  "exports": {
    "./fetch-mock": "./src/fetch-mock.ts",
    "./server-setup": "./src/server-setup.ts",
    "./ui-setup": "./src/ui-setup.ts",
    "./scenarios": "./src/scenarios.ts",
    "./helpers": "./src/helpers.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing/bdd": "jsr:@std/testing@1/bdd",
    "playwright": "npm:playwright@^1.40.0"
  },
  "tasks": {
    "test": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --allow-sys",
    "test:unit": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --allow-sys",
    "test:watch": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --allow-sys --watch",
    "test:coverage": "deno test --allow-net --allow-env --allow-read --allow-write --allow-run --allow-sys --coverage=coverage/",
    "lint": "deno lint src/",
    "lint:fix": "deno lint --fix src/",
    "format": "deno fmt src/",
    "format:check": "deno fmt --check src/",
    "typecheck": "deno check src/**/*.ts",
    "clean": "rm -rf coverage/"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "es2022", "dom"]
  }
}
